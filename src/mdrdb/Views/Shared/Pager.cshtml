@model Pager

<!-- pager -->
@if (Model.EndPage > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item"><a class="page-link" asp-route-id="1">First</a></li>
                <li class="page-item"><a class="page-link" asp-route-id="@(Model.CurrentPage - 1)">&laquo;</a></li>
            }
            else
            {
                <li class="page-item disabled"><a class="page-link" asp-route-id="1">First</a></li>
                <li class="page-item disabled"><a class="page-link" asp-route-id="1">&laquo;</a></li>
            }

            @for (var pagenumber = Model.StartPage; pagenumber <= Model.EndPage; pagenumber++)
            {
                <li class="page-item @(pagenumber == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-route-id="@pagenumber">@pagenumber</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item"><a class="page-link" asp-route-id="@(Model.CurrentPage + 1)">&raquo;</a></li>
                <li class="page-item"><a class="page-link" asp-route-id="@(Model.TotalPages)">Last</a></li>
            }
            else
            {
                <li class="page-item disabled"><a class="page-link" asp-route-id="@(Model.TotalPages)">&raquo;</a></li>
                <li class="page-item disabled"><a class="page-link" asp-route-id="@(Model.TotalPages)">Last</a></li>
            }
        </ul>
    </nav>
}
