@model SearchOptionsModelView

<h1>Search Options</h1>

<form method="post">

    <div class="form-group row">
        <label asp-for="SelectedProjectIDs" class="col-sm-2 col-form-label">Projects:</label>
        <div class="col-sm-10">
            <select asp-for="SelectedProjectIDs" asp-items="Model.AllProjects" class="multiple-select"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SelectedStatusIDs" class="col-sm-2 col-form-label">Statuses:</label>
        <div class="col-sm-10">
            <select asp-for="SelectedStatusIDs" asp-items="Model.AllStatuses" class="multiple-select"></select>
        </div>
    </div>

    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>

</form>

@section head
{
    <link href="~/lib/select2/dist/css/select2.min.css" rel="stylesheet" />
}

@section scripts
{
    <script src="~/lib/select2/dist/js/select2.js"></script>
    <script type="text/javascript">
        $('.multiple-select').select2({ dropdownAutoWidth: true, allowClear: true, width: '100%' });
        //$($('.multiple-select').select2('container')).addClass('col-sm-10');
    </script>
}